{%- comment -%}
  Sift Search Snippet

  Usage:
  1. Copy this file to your theme's snippets folder
  2. Copy sift-search.js to your theme's assets folder
  3. Include the snippet where you want the search to appear:
     {% render 'sift-search' %}

  Configuration:
  - The search uses the App Proxy endpoint at /apps/sift/search
  - Results are displayed in a responsive grid
  - Customize styles in your theme CSS
{%- endcomment -%}

<div id="sift-search-container" class="sift-search">
  {%- comment -%} Search Form {%- endcomment -%}
  <form id="sift-search-form" class="sift-search__form" onsubmit="return false;">
    <div class="sift-search__input-wrapper">
      <input
        type="search"
        id="sift-search-input"
        class="sift-search__input"
        placeholder="Search products..."
        autocomplete="off"
        autocapitalize="off"
        autocorrect="off"
        spellcheck="false"
      />
      <button type="submit" class="sift-search__button">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
      </button>
    </div>
  </form>

  {%- comment -%} Loading State {%- endcomment -%}
  <div id="sift-search-loading" class="sift-search__loading" style="display: none;">
    <div class="sift-search__spinner"></div>
    <span>Searching...</span>
  </div>

  {%- comment -%} Results Grid {%- endcomment -%}
  <div id="sift-search-results" class="sift-search__results"></div>

  {%- comment -%} No Results Message {%- endcomment -%}
  <div id="sift-search-no-results" class="sift-search__no-results" style="display: none;">
    <p>No products found for "<span id="sift-search-query"></span>"</p>
    <p>Try adjusting your search terms</p>
  </div>
</div>

<style>
  .sift-search {
    width: 100%;
    max-width: 100%;
  }

  .sift-search__form {
    margin-bottom: 1.5rem;
  }

  .sift-search__input-wrapper {
    display: flex;
    align-items: center;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    overflow: hidden;
    background: #fff;
  }

  .sift-search__input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    outline: none;
    font-size: 1rem;
    background: transparent;
  }

  .sift-search__button {
    padding: 0.75rem 1rem;
    border: none;
    background: transparent;
    cursor: pointer;
    color: #6b7280;
  }

  .sift-search__button:hover {
    color: #111827;
  }

  .sift-search__loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 2rem;
    color: #6b7280;
  }

  .sift-search__spinner {
    width: 1.25rem;
    height: 1.25rem;
    border: 2px solid #e5e7eb;
    border-top-color: #3b82f6;
    border-radius: 50%;
    animation: sift-spin 0.6s linear infinite;
  }

  @keyframes sift-spin {
    to {
      transform: rotate(360deg);
    }
  }

  .sift-search__results {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .sift-search__product {
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    overflow: hidden;
    background: #fff;
    transition: box-shadow 0.2s;
  }

  .sift-search__product:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .sift-search__product-link {
    text-decoration: none;
    color: inherit;
  }

  .sift-search__product-image {
    aspect-ratio: 1;
    width: 100%;
    object-fit: cover;
    background: #f3f4f6;
  }

  .sift-search__product-info {
    padding: 1rem;
  }

  .sift-search__product-title {
    font-weight: 600;
    font-size: 0.875rem;
    margin: 0 0 0.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .sift-search__product-variant {
    font-size: 0.75rem;
    color: #6b7280;
    margin: 0 0 0.5rem;
  }

  .sift-search__product-price {
    font-weight: 600;
    color: #111827;
  }

  .sift-search__product-compare-price {
    font-size: 0.875rem;
    color: #9ca3af;
    text-decoration: line-through;
    margin-left: 0.5rem;
  }

  .sift-search__product-availability {
    display: inline-block;
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    margin-top: 0.5rem;
  }

  .sift-search__product-availability--in-stock {
    background: #dcfce7;
    color: #166534;
  }

  .sift-search__product-availability--out-of-stock {
    background: #fee2e2;
    color: #991b1b;
  }

  .sift-search__no-results {
    text-align: center;
    padding: 3rem;
    color: #6b7280;
  }

  .sift-search__no-results p:first-child {
    font-weight: 600;
    color: #111827;
  }

  @media (max-width: 640px) {
    .sift-search__results {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>

{{ 'sift-search.js' | asset_url | script_tag }}
