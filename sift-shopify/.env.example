# ===========================================
# Sift Shopify Search - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Database
# -----------------
POSTGRES_USER=sift
POSTGRES_PASSWORD=sift_dev_password
POSTGRES_DB=sift
DATABASE_URL=postgresql://sift:sift_dev_password@localhost:5432/sift?schema=public

# -----------------
# Redis
# -----------------
REDIS_URL=redis://localhost:6379

# -----------------
# Application URLs
# -----------------
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# -----------------
# Shopify Configuration
# -----------------
# Get these from your Shopify Partner Dashboard
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# OAuth Scopes (comma-separated)
SHOPIFY_SCOPES=read_products,read_inventory,read_locations,read_metafields,read_product_listings,read_publications

# -----------------
# Security
# -----------------
# Must be exactly 32 characters for AES-256 encryption
ENCRYPTION_KEY=dev_encryption_key_32_characters!

# -----------------
# Demo Mode
# -----------------
# Set to true to run without real Shopify credentials
# Uses sample data for testing
DEMO_MODE=true

# -----------------
# Embeddings Configuration
# -----------------
# Set to true to use external embeddings API (requires OPENAI_API_KEY)
# Set to false to use deterministic local embeddings (no API key needed)
USE_EXTERNAL_EMBEDDINGS=false

# OpenAI API Key (only required if USE_EXTERNAL_EMBEDDINGS=true)
OPENAI_API_KEY=

# -----------------
# Runtime
# -----------------
NODE_ENV=development
PORT=4000
